@import '~@/assets/stylus/mixin'
#corpInfo
  .corpInfo-wrapper
    padding-top: 1px
    .part-wrapper
      margin-top: 30px
      .part-title
        height 40px
        line-height: 40px
        padding-left: 20px
        background-color #e6edf5
        font-weight bold
      .basic-wrapper
        .corp-info-item
          height 32px
          line-height: 32px
          margin-top: 20px
          clear()
          &:hover
            .edit-icon
              display: inline-block !important
          &.corp-logo-item
            height 60px
            line-height: 1
          &.corp-info-weixin
            height auto
            line-height: 1
          .left
            width: 71px
            margin-left: 20px
            margin-right: 42px
            float left
            .tip-text
              margin-top: 6px
              font-size: 12px
              color: #979899
          .right
            float left
            height 100%
            .span
              display inline-block
            .nowrap
              float left
              max-width: 900px
              no-wrap()
              margin-right: 5px
            .nowrap-icon
              float left
            .handle
              margin-left: 5px
              color: #409fff
              cursor pointer
            .cancel
              color:#979899
            .default
              clear()
              .edit-icon
                display: none
              .default-left
                float left
                &.default-logo
                  width: 60px
                  height 60px
                  .initImg
                    width: 100%
                    height 100%
                &.default-weixin
                  height 31px
                  width: 31px
              .default-right
                float left
                margin-left: 10px
                &.default-logo-text
                  font-size 12px
                  margin-top: 48px
                  color #979899
                &.default-weixin-text
                  line-height: 32px
              .upgrade
                width 70px
                height 28px
                cursor pointer
                margin-left: 20px
                background-color #f56c6c
                border-radius 3px
                color: #fff
                text-align: center
                line-height: 28px
            .edit
              position relative
              .ivu-input-wrapper
                width: auto
                .ivu-input
                  height 32px
              .err
                position: absolute
                top: 110%
                left 0
                line-height: 1
                color: #f56c6c
                font-size: 12px

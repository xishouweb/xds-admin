@import '~@/assets/stylus/mixin'
.modalSync
  .radios
    padding 20px 20px 0
  .all-radio
    padding: 5px 10px 25px
    border-bottom solid 1px #e3e5e6
  .single-radio
    margin-top: 28px
    .ivu-checkbox-group
      clear()
      .ivu-checkbox-wrapper
        float left
        width: 49%
        margin-right: 0
        padding 5px 0 25px
        padding-left: 10px
        margin-bottom: 10px
        &.ivu-checkbox-wrapper-checked
          background-color: rgb(230, 238, 244)
          border-radius 3px
        &:nth-of-type(2n)
          margin-left: 2%
        &:nth-of-type(1)
          padding 5px 0px 0px 10px
        &:hover
          background-color: rgb(230, 238, 244)
          border-radius 3px
        &:nth-last-of-type(1)
          margin-bottom: 0
        .ivu-checkbox
          float left
        .check-right
          position: relative
          top -3px
          margin-left: 20px
          float left
          .tips
            color: #606366
            font-size: 12px
#tencentMange
  // min-height: 100%
  padding-bottom 12px
  .noData-wrapper
    .tips-wrapper
      text-align: center
      height: 450px
      border-bottom solid 1px #e3e5e6
      .noImg
        margin-top: 100px
      .tip-1
        margin-top: 30px
        font-size: 16px
        height: 15px;
        font-family: MicrosoftYaHei;
        font-weight: normal;
        font-stretch: normal;
        line-height: 24px;
        letter-spacing: 0px;
        color: #303133;
      .tip-2
        font-size: 14px;
        margin-top: 15px
        color: #606366;
        span
          color: #409eff
          cursor pointer
      .tip-3
        width: 200px
        margin-top: 20px
    .bottom-tip
      div
        margin-top: 10px
      .explain
        margin-top: 40px
  .tencentManage-wrapper
    .table-wrapper
      .table-btn
        clear()
        .left
          float left
          margin-top: 20px
        .right
          margin-top: 25px
          float right
          color #606366
          cursor pointer
      .table-list
        margin-top: 20px
        min-height: 300px
        position relative
        tr
          td:nth-of-type(1)
            .ivu-table-cell
              padding-left: 10px
        .ivu-table-tbody
           tr
            height 60px

@import '~@/assets/stylus/mixin'
.payment
  .time-data
    height 40px
    clear()
    .left
      float left
      .left-part
        float left
      .part1
        margin-right 9px
      .part2
        .p1
          font-size 16px
          font-weight: bold
        .p2
          color #606366
          margin-top 10px
    .right
      float right
      .residue-data
        margin-top 26px
        .text
          display: inline-block
          margin-right: 5px
          .ivu-icon
            margin-right: 5px
  .info-list-wrapper
    margin-top 40px
    height 80px
    background-color #f7f9fa
    border-radius 3px
    .ivu-col
      text-align: center
    .info-tab
      text-align: left
      padding-left: 20px
      .info-item
        .text1
          display: inline-block
          color: #606366
          margin-right: 20px
        .text2
          display: inline-block
      .info-item-1
        margin-top: 20px
        margin-bottom: 15px
    .info-tab1
      display: inline-block
    .info-last
      text-align: right
      padding-right: 20px
      .text1
        display: inline-block
        margin-top: 38px
        margin-right: 20px
      .text2
        display: inline-block
        margin-top: 30px
        color: #f56c6c
        font-size: 24px
        .text3
          font-size: 14px
  .pay-way
    margin-top: 40px
    .title
      margin-bottom: 13px
      font-weight: bold
    .pay-way-component
      .PayWay
        height 400px
        border: solid 1px #e3e4e5
        border-radius: 3px
        padding: 20px
        text-align: center
        .pay-type
          text-align: left
        .scanCode
          display: inline-block
          .payremind-text
            margin-top: 65px
            text-align: center
            font-size: 16px
            color: #606366
            letter-spacing: 5px
          .erweicode
            margin-top: 10px
            img
              width: 170px
              height 170px
          .paytype-img
            margin-top: 10px
            line-height: 26px
            height 26px
            .pay-phone
              display: inline-block
              margin-right: 20px
              .left
                display: inline-block
                img
                  vertical-align: middle
            .pay-zhifubao
              margin-right: 0

        .bank
          margin-top: 40px
          .tips1
            text-align: left
            color: #606366
            margin-bottom: 10px
            .money
              font-size: 18px
              color #f56c6c
          .tips2
            text-align: left
          .payee-info
            margin-top: 47px
            text-align: center
            .payee-info-wrapper
              padding: 20px 100px 5px
              display: inline-block
              text-align: left
              border: solid 1px #e3e4e5
              border-radius: 3px
              .payee-info-item
                margin-bottom: 15px
                .text1
                  display: inline-block
                  color: #606366
                  width: 100px
                .text2
                  display: inline-block
      .btn
        margin-top: 25px
        .toUpload
          width: 320px
